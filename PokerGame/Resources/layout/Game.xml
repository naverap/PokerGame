<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#bf7960"
        android:id="@+id/GameContainer"
        />
    <RelativeLayout
        android:layout_margin="10px"
        android:layout_weight="0.3"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/relativeLayout2"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player 0\npot 1000\nbet 100"
            android:id="@+id/tvPlayer0"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player 1\npot 1000\nbet 100"
            android:id="@+id/tvPlayer1"
            android:layout_centerVertical="true"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player 2\npot 1000\nbet 100"
            android:id="@+id/tvPlayer2"
            android:layout_centerHorizontal="true"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="player 3\npot 1000\nbet 100"
            android:id="@+id/tvPlayer3"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            />
        <Button
            android:text="Play"
            android:backgroundTint="#0566e6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:id="@+id/playbtn"
               />
        <Button
            android:text="Check"
            android:backgroundTint="#0566e6"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/checkbtn"
               />
        <Button
            android:text="Raise"
            android:backgroundTint="#f0e80c"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="37.5dp"
            android:id="@+id/raisebtn"
            />
        <Button
            android:text="Fold"
            android:backgroundTint="#b81004"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="75dp"
            android:id="@+id/foldbtn"
               />
        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Menu"
            android:textSize="10dp"
            android:textColor="#000000"
            android:id="@+id/menubtn2"
            android:layout_weight="0.3"
            android:layout_alignParentEnd="true"
               />
    </RelativeLayout>
</RelativeLayout>
